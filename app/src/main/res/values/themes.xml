<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WhichOne" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF333D5F</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/which_one_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.WhichOne</item>
    </style>
</resources>